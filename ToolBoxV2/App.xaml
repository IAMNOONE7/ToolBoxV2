<Application x:Class="ToolBoxV2.Presentation.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:ToolBoxV2.Presentation.WPF.Converters"
             xmlns:viewModel ="clr-namespace:ToolBoxV2.Presentation.WPF.MVVM.ViewModel"
             xmlns:view ="clr-namespace:ToolBoxV2.Presentation.WPF.MVVM.View">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ProgressBar.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.ToggleButton.xaml" />
                <ResourceDictionary Source="Resources/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Fonts.xaml"/>
                <ResourceDictionary Source="Resources/Metrics.xaml"/>
                <ResourceDictionary Source="/Resources/MenuButtonTheme.xaml"/>
                <ResourceDictionary Source="/Resources/TextBox1Theme.xaml"/>
                <ResourceDictionary Source="/Resources/AppButtonTheme.xaml"/>
                <ResourceDictionary Source="/Resources/CheckBoxTheme.xaml"/>
                <ResourceDictionary Source="/Resources/DataGridTheme1.xaml"/>                
                <ResourceDictionary Source="/Resources/ButtonTheme.xaml"/>
                <ResourceDictionary Source="/Resources/Button1Theme.xaml"/>
                <ResourceDictionary Source="/Resources/ComboBox1Theme.xaml"/>               
            </ResourceDictionary.MergedDictionaries>

            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:EnumToBoolConverter x:Key="EnumToBoolConverter"/>

            <DataTemplate DataType="{x:Type viewModel:InitViewModel}">
                <view:InitView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:LocalMessagesViewModel}">
                <view:LocalMessageView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:XMLEditorViewModel}">
                <view:XMLEditorView/>
            </DataTemplate>

        </ResourceDictionary>              
    </Application.Resources>
</Application>
