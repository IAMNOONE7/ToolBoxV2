<UserControl x:Class="ToolBoxV2.Presentation.WPF.MVVM.View.XMLEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBoxV2.Presentation.WPF.MVVM.View"
             mc:Ignorable="d" 
             xmlns:domain="clr-namespace:ToolBoxV2.Domain.XMLEditor;assembly=ToolBoxV2.Domain"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:avalon ="clr-namespace:ToolBoxV2.Presentation.WPF.Helpers"
             d:DesignHeight="1500" d:DesignWidth="1900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>            
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

       

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding XMLEditFileExPath}" MinWidth="50" Margin="8" Grid.Column="0"/>
                <Button  Command="{Binding BrowseExcelCommand}" Margin="8" MinWidth="20" Grid.Column="1"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding XMLEditFileXmlPath}" MinWidth="50" Margin="8" Grid.Column="0"/>
                <Button Command="{Binding BrowseXmlCommand}" Margin="8" MinWidth="20" Grid.Column="1"/>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="7*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding XMLEditTargetPath}" MinWidth="50" Margin="8" Grid.Column="0"/>
                <Button Command="{Binding BrowseFolderCommand}" Margin="8" MinWidth="20" Grid.Column="1"/>
            </Grid>
            
            <TextBox Text="{Binding XMLEditSheetName}" Margin="8" Grid.Row="3"/>
            <TextBox Text="{Binding XMLEditHeaderRow}" Margin="8" Grid.Row="4"/>
            
            <Button Content="Load Data"  
                     Margin="8" 
                     Grid.Row="5"     
                     IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                     Command="{Binding ImportCommand}" />
        </Grid>

        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Vertical">
            <TextBlock Text="Loading..." 
                        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                        Foreground="OrangeRed" />

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Mode:" 
                           Margin="8" 
                           VerticalAlignment="Center"/>

                <ComboBox Width="160"
                          Margin="8" 
                          ItemsSource="{Binding EditModes}"
                          SelectedItem="{Binding EditMode, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Key column:" 
                           Margin="8" 
                           VerticalAlignment="Center"/>
                
                <ComboBox
                         ItemsSource="{Binding Parameters}"       
                         SelectedItem="{Binding SelectedKeyColumn}"
                         Width="200"
                         Margin="8" />
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Vertical">
            <Button Content="Generate XML"                           
                Command="{Binding GenerateCommand}"
                Margin="0,12,0,0"/>

            <Button Content="Save generated XML"                
                Command="{Binding SaveGeneratedCommand}"
                Margin="0,4,0,0"/>
        </StackPanel>

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <DataGrid ItemsSource="{Binding TableView}"                      
                       Margin="8"
                       AutoGenerateColumns="True"
                       IsReadOnly="False" 
                       MinWidth="200"
                       Grid.Column="0"/>

            <TreeView Margin="8"
                       ItemsSource="{Binding RootNode.Children}"
                       SelectedItemChanged="TreeView_SelectedItemChanged"
                       MinWidth="200"
                       Grid.Column="1">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type domain:XMLNodeModel}"
                       ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Attributes[name]}" />
                            <TextBlock Text=")" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>

            <StackPanel Margin="4" Grid.Column="2">
                <TextBlock Text="Parameters" 
                            FontWeight="Bold" 
                            Margin="0,0,0,4"/>
                <ListBox ItemsSource="{Binding Parameters}"
                          SelectedItem="{Binding SelectedParameter}"
                          Margin="0,0,0,8"
                          MinWidth="200"
                          MinHeight="50"/>
                <Button Content="Replace selection"
                        Command="{Binding ReplaceSelectionCommand}" />
            </StackPanel>
        </Grid>       
        
        <avalonEdit:TextEditor x:Name="TemplateEditor" 
                               Margin="8"
                            avalon:AvalonEditBinding.Text="{Binding TemplateXml, Mode=TwoWay}"
                            ShowLineNumbers="True"
                            FontFamily="Consolas"
                            FontSize="12"
                            Grid.Row="1" Grid.Column="1"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            />
        

       
        <avalonEdit:TextEditor Margin="8"                             
                            x:Name="XmlEditor"
                            FontFamily="Consolas"
                            FontSize="12"
                            ShowLineNumbers="True"
                            IsReadOnly="True"
                            Grid.Row="2" Grid.Column="1"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            avalon:AvalonEditBinding.Text="{Binding GeneratedXmlPreview, Mode=TwoWay}"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            />
    </Grid>
</UserControl>
