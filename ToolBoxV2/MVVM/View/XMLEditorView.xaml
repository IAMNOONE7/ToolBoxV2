<UserControl x:Class="ToolBoxV2.Presentation.WPF.MVVM.View.XMLEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBoxV2.Presentation.WPF.MVVM.View"
             mc:Ignorable="d" 
             xmlns:domain="clr-namespace:ToolBoxV2.Domain.XMLEditor;assembly=ToolBoxV2.Domain"
             xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
             xmlns:avalon ="clr-namespace:ToolBoxV2.Presentation.WPF.Helpers"
             xmlns:meaning ="clr-namespace:ToolBoxV2.Presentation.WPF.Helpers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25*"/>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30*"/>            
            <ColumnDefinition Width="70*"/>
        </Grid.ColumnDefinitions>

       

        <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding XMLEditFileExPath}" MinWidth="50"  Margin="1,1,1,10" Grid.Column="0" meaning:TextBoxHelper.Meaning="Excel File Path" Style="{StaticResource TextBox1Theme}"/>
                <Button  Command="{Binding BrowseExcelCommand}" MaxHeight="45" Margin="1" MinWidth="20" Grid.Column="1" Style="{StaticResource Button1_Theme}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="20" Height="20" Margin="0,0,6,0"/>                        
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBox Text="{Binding XMLEditFileXmlPath}" MinWidth="50" Margin="1,1,1,10" Grid.Column="0" meaning:TextBoxHelper.Meaning="XML File Path" Style="{StaticResource TextBox1Theme}"/>
                <Button Command="{Binding BrowseXmlCommand}" MaxHeight="45" Margin="1" MinWidth="20" Grid.Column="1" Style="{StaticResource Button1_Theme}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="20" Height="20" Margin="0,0,6,0"/>
                    </StackPanel>
                </Button>
            </Grid>

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="9*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="TargetPathTextBox" Text="{Binding XMLEditTargetPath}" MinWidth="50"  Margin="1,1,1,10" Grid.Column="0" meaning:TextBoxHelper.Meaning="Target Path" Style="{StaticResource TextBox1Theme}"/>
                <Button Command="{Binding BrowseFolderCommand}" MaxHeight="45" Margin="1" MinWidth="20" Grid.Column="1" Style="{StaticResource Button1_Theme}">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FolderOpen" Width="20" Height="20" Margin="0,0,6,0"/>
                    </StackPanel>
                </Button>
            </Grid>

            <TextBox Text="{Binding XMLEditSheetName}" Margin="1" Grid.Row="3" meaning:TextBoxHelper.Meaning="Sheet Name" Style="{StaticResource TextBox1Theme}" Height="{Binding ActualHeight, ElementName=TargetPathTextBox}" />
            <TextBox Text="{Binding XMLEditHeaderRow}" Margin="1" Grid.Row="4" meaning:TextBoxHelper.Meaning="Header Row" Style="{StaticResource TextBox1Theme}" Height="{Binding ActualHeight, ElementName=TargetPathTextBox}"/>

            <Button Content="Load Data"  
                        Margin="2" 
                        Grid.Row="5"
                        MinHeight="50"
                        MinWidth="100"
                        HorizontalAlignment="Center"
                        IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}"
                        Command="{Binding ImportCommand}" 
                        Style="{StaticResource Button_Theme}"
                        />                             
           
        </Grid>

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="6*"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <TextBlock Text="Generate"
               VerticalAlignment="Center"
               Margin="5,0,8,0"
               FontSize="{StaticResource FontSizeMedium}"/>


                <ToggleButton
                        Style="{StaticResource MaterialDesignSwitchToggleButton}"
                        IsChecked="{Binding IsUpdateMode}"
                        VerticalAlignment="Center">
                    <ToggleButton.LayoutTransform>
                        <ScaleTransform ScaleX="1.6" ScaleY="1.6"/>
                    </ToggleButton.LayoutTransform>
                </ToggleButton>

                <TextBlock Text="Update"
               VerticalAlignment="Center"
               Margin="8,0,0,0"
               FontSize="{StaticResource FontSizeMedium}"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" VerticalAlignment="Center">                

                <ComboBox
                  ItemsSource="{Binding Parameters}"       
                  SelectedItem="{Binding SelectedKeyColumn}"
                  Style="{StaticResource ComboBox1Theme}" 
                  meaning:TextBoxHelper.Meaning="Key Column"
                  Width="200"
                  MinHeight="50"
                  Margin="5,0,0,0" />
            </StackPanel>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <ProgressBar 
                    Grid.Column="0"
                    Style="{StaticResource MaterialDesignCircularProgressBar}"
                    IsIndeterminate="True"
                    Foreground="{StaticResource GradientMyBluePurple}"
                    Height="60"
                    Width="60"
                    Margin="10"
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"/>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Button Content="Preview XML"                           
                            Command="{Binding GenerateCommand}"
                            Margin="0,12,0,0"
                            Style="{StaticResource Button_Theme}"
                            MinHeight="50"
                            MinWidth="100"
                            HorizontalAlignment="Center"/>

                    <Button Content="Save XML"                
                            Command="{Binding SaveGeneratedCommand}"
                            Margin="0,4,0,0"
                            Style="{StaticResource Button_Theme}"
                            MinHeight="50"
                            MinWidth="100"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>        

        <Grid Grid.Row="0" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <DataGrid ItemsSource="{Binding TableView}"                      
                       Margin="8"
                       AutoGenerateColumns="True"
                       IsReadOnly="False" 
                       MinWidth="200"
                       Grid.Column="0"
                       HorizontalScrollBarVisibility="Auto"
                       VerticalScrollBarVisibility="Auto"
                       Style="{StaticResource DataGridTheme1}"/>

            <TreeView Margin="8"
                       ItemsSource="{Binding RootNode.Children}"
                       SelectedItemChanged="TreeView_SelectedItemChanged"
                       MinWidth="200"
                       Grid.Column="1">
                <TreeView.Resources>
                    <HierarchicalDataTemplate DataType="{x:Type domain:XMLNodeModel}"
                       ItemsSource="{Binding Children}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold"/>
                            <TextBlock Text=" (" />
                            <TextBlock Text="{Binding Attributes[name]}" />
                            <TextBlock Text=")" />
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.Resources>
            </TreeView>

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15*"/>
                    <RowDefinition Height="70*"/>
                    <RowDefinition Height="15*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Parameters" 
                           FontWeight="Bold" 
                           Margin="0,0,0,4"
                           Grid.Row="0"/>
                <ListBox ItemsSource="{Binding Parameters}"
                          SelectedItem="{Binding SelectedParameter}"
                          Margin="0,0,0,8"
                          MinWidth="200"
                          MinHeight="50"                          
                          ScrollViewer.VerticalScrollBarVisibility="Visible"
                          Grid.Row="1"
                          />
                <Button Content="Replace selection"
                        Command="{Binding ReplaceSelectionCommand}" 
                        Style="{StaticResource Button_Theme}"
                        Grid.Row="2"/>
            </Grid>            
        </Grid>       
        
        <avalonEdit:TextEditor x:Name="TemplateEditor" 
                               Margin="8"
                            avalon:AvalonEditBinding.Text="{Binding TemplateXml, Mode=TwoWay}"
                            ShowLineNumbers="True"
                            FontFamily="Consolas"
                            FontSize="12"
                            Grid.Row="1" Grid.Column="1"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            />
        

       
        <avalonEdit:TextEditor Margin="8"                             
                            x:Name="XmlEditor"
                            FontFamily="Consolas"
                            FontSize="12"
                            ShowLineNumbers="True"
                            IsReadOnly="True"
                            Grid.Row="2" Grid.Column="1"
                            VerticalScrollBarVisibility="Visible"
                            HorizontalScrollBarVisibility="Visible"
                            avalon:AvalonEditBinding.Text="{Binding GeneratedXmlPreview, Mode=TwoWay}"
                            VerticalAlignment="Stretch"
                            HorizontalAlignment="Stretch"
                            />
    </Grid>
</UserControl>
