<Window x:Class="ToolBoxV2.Presentation.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="ToolBoxV2.Presentation.WPF"
        xmlns:lm="clr-namespace:ToolBoxV2.Presentation.WPF.MVVM.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowState="Normal"
        ResizeMode="CanResize"
        WindowStyle="None"
        MinWidth="1200"
        MinHeight="900"
        MouseDown="Window_MouseDown"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:models="clr-namespace:ToolBoxV2.Presentation.WPF.Services.SnackBar">
    <Grid SnapsToDevicePixels="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Top bar -->
            <RowDefinition Height="*"/>
            <!-- Main content -->
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <!-- Sidebar -->
            <ColumnDefinition Width="*"/>
            <!-- Main screen -->
        </Grid.ColumnDefinitions>

        <!-- Row 1, Column 2: Close buttons or title -->
        <DockPanel Grid.Row="0" Grid.Column="1"               
               HorizontalAlignment="Right">
            <Button Content="⎯"     
                    FontFamily="{StaticResource FontBold}"
                    FontSize="{StaticResource FontSizeTitle}"
                    Foreground="{StaticResource GradientMyBluePurple}"                   
                    Background="Transparent"
                    BorderThickness="0"
                    x:Name="MinimizeAppButton"
                    Margin="10,0,10,0"
                    Click="MinimizeAppButton_Click"
                    Style="{StaticResource AppButtonTheme}"
                    />

            <Button Content="X"    
                    FontFamily="{StaticResource FontBold}"
                    FontSize="{StaticResource FontSizeTitle}"
                    Foreground="{StaticResource GradientMyBluePurple}"  
                    Background="Transparent"
                    BorderThickness="0"
                    x:Name="CloseAppButton"
                    Margin="10,0,10,0"
                    Click="CloseAppButton_Click"
                    Style="{StaticResource AppButtonTheme}"
                    />
        </DockPanel>

        <StackPanel Grid.Row="1" Grid.Column="0">
            <RadioButton Content="Home"
                          IsChecked="True"
                          MinHeight="40"     
                          Padding="{StaticResource PaddingNormal}"                          
                          Foreground="{StaticResource ColorMyColor1}"
                          FontSize="{StaticResource FontSizeLarge}"
                          FontFamily="{StaticResource FontBold}"
                          Style="{StaticResource MenuButtonTheme}"
                          Command="{Binding ShowInitCommand}"/>

            <RadioButton Content="XML Editor"
                          Padding="{StaticResource PaddingNormal}"                          
                          Foreground="{StaticResource ColorMyColor1}"
                          FontSize="{StaticResource FontSizeLarge}"
                          FontFamily="{StaticResource FontBold}"
                          Style="{StaticResource MenuButtonTheme}"
                          MinHeight="40"                                 
                          Command="{Binding ShowXMLEditorCommand}"/>

            <RadioButton Content="Local Messages"    
                          Padding="{StaticResource PaddingNormal}"                          
                          Foreground="{StaticResource ColorMyColor1}"
                          FontSize="{StaticResource FontSizeLarge}"
                          FontFamily="{StaticResource FontBold}"
                          Style="{StaticResource MenuButtonTheme}"
                          MinHeight="40"                                          
                          Command="{Binding ShowLocalMessagesCommand}"/>


        </StackPanel>

        <Border Grid.Row="1" Grid.Column="1" BorderThickness="15,15,0,15" BorderBrush="{StaticResource GradientMyPurpleBlue}">
            <Grid>
                <ContentControl HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Content="{Binding CurrentView}" />
                <materialDesign:Snackbar 
                          x:Name="MainSnackbar"
                          Width="400"
                          IsActive="{Binding CurrentMessage, Converter={StaticResource NullToBoolConverter}}"
                          Message="{Binding CurrentMessage.Content}"
                          VerticalAlignment="Bottom"
                          HorizontalAlignment="Center"
                          HorizontalContentAlignment="Center" 
                          Padding="10" 
                          Background="{Binding SnackbarBackgroundBrush}"
                          >
                </materialDesign:Snackbar>
            </Grid>
        </Border>

        <Border Grid.Row="2" Grid.Column="1" Margin="20" Padding="10" BorderBrush="{StaticResource GradientMyBluePurple}" BorderThickness="{StaticResource BorderThick}" Background="{StaticResource ColorMyColor3}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <ListBox ItemsSource="{Binding FilteredMessages}"
                         Height="200"                        
                         BorderThickness="0"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="13"
                         Grid.Column="0" Grid.ColumnSpan="3" Margin="0,0,10,0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                            <Run Text="{Binding Timestamp, StringFormat={}{0:HH:mm:ss}}"/>
                            <Run Text=" "/>
                            <Run Text="["/>
                            <Run Text="{Binding Level}"/>
                            <Run Text="] "/>
                            <Run Text="{Binding Message}"/>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource ColorMyColor1}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Level}" Value="Info">
                                                <Setter Property="Foreground" Value="{StaticResource ColorSBInfo}" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding Level}" Value="Warning">
                                                <Setter Property="Foreground" Value="{StaticResource ColorSBWarning}" />
                                            </DataTrigger>

                                            <DataTrigger Binding="{Binding Level}" Value="Error">
                                                <Setter Property="Foreground" Value="{StaticResource ColorSBError}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10,0,0,0">
                    <CheckBox Content="Info"
                              IsChecked="{Binding ShowInfo}" 
                              Margin="0,0,8,0"
                              Padding="{StaticResource PaddingNormal}"                          
                              Foreground="{StaticResource ColorMyColor1}"
                              FontSize="{StaticResource FontSizeSmall}"
                              FontFamily="{StaticResource FontBold}"
                              Style="{StaticResource CheckButtonTheme}"/>
                    
                    <CheckBox Content="Warning"
                              IsChecked="{Binding ShowWarning}" 
                              Margin="0,0,8,0"
                              Padding="{StaticResource PaddingNormal}"                          
                              Foreground="{StaticResource ColorMyColor1}"
                              FontSize="{StaticResource FontSizeSmall}"
                              FontFamily="{StaticResource FontBold}"
                              Style="{StaticResource CheckButtonTheme}"/>
                    
                    <CheckBox Content="Error"
                              IsChecked="{Binding ShowError}" 
                              Margin="0,0,8,0"
                              Padding="{StaticResource PaddingNormal}"                          
                              Foreground="{StaticResource ColorMyColor1}"
                              FontSize="{StaticResource FontSizeSmall}"
                              FontFamily="{StaticResource FontBold}"
                              Style="{StaticResource CheckButtonTheme}"/>

                    <Button Content="Clear log"
                            Command="{Binding ClearLogCommand}"
                            Margin="0,10,8,0"
                            Style="{StaticResource Button_Theme}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
