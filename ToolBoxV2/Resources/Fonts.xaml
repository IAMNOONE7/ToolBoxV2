<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    
    <FontFamily x:Key="FontPrimary">Segoe UI</FontFamily>
    <FontFamily x:Key="FontMonospace">Consolas</FontFamily>
    <FontFamily x:Key="FontBold">Segoe UI Semibold</FontFamily>

    <sys:Double x:Key="FontSizeExtraSmall">10</sys:Double>
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeBase">14</sys:Double>
    <sys:Double x:Key="FontSizeMedium">16</sys:Double>
    <sys:Double x:Key="FontSizeLarge">18</sys:Double>
    <sys:Double x:Key="FontSizeTitle">24</sys:Double>
</ResourceDictionary>